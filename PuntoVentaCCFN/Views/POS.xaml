                Grid.Column="2"
                x:Name="tbCodigoProducto"
                Style="{DynamicResource tbStyle}" Grid.ColumnSpan="3" Margin="0,5,190,8" KeyDown="tbCodigoProducto_KeyDown" GotFocus="tbCodigoProducto_GotFocus"/>
            <Button Style="{DynamicResource btnSide}" 
                Background="Orange"
                Grid.Column="9"
                    x:Name="btnD"
                Grid.Row="4" Margin="151,29,400,5" Click="Tarjeta" Grid.RowSpan="2"
                >
                <TextBlock Text="Tarjeta D."
                           Foreground="White"
                           HorizontalAlignment="Center"
