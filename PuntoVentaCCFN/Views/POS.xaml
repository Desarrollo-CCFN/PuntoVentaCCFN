                       Grid.Column="2"
                       Text="Codigo Cliente"
                       Foreground="White"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" Height="16" Width="78" Margin="21,0,0,0"/>
            <TextBox Style="{DynamicResource tbStyle}" 
                Grid.Column="1"
